@model SistemaWeb.Contexto.horariogeneracion
@{
    if (ViewBag.displayRole == 0)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.displayRole == 1)
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (ViewBag.displayRole == 2)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    ViewBag.Title = "Horario";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Generacion de Horario</title>
</head>


<body>

    <div>

        <h2>Generacion de horario</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                Seleccionar Carrera
                <div class="col-md-10">
                    @Html.DropDownList("cod_carrera", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cod_carrera, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                Semestre
                <div class="col-md-10">
                    @Html.DropDownList("tipo_ciclo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tipo_ciclo, "", new { @class = "text-danger" })
                </div>

            </div>


            <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>

            <asp:UpdateProgress runat="server" ID="idUpdateProgress"
                                AssociatedUpdatePanelID="h" DynamicLayout="true">
                <ProgressTemplate>
                    <div style="position: fixed;top: 50%;left: 50%;transform: translate(-50%, -50%);">
                        <img id="idAjaxLoader" alt="Enviando ..." src="~/Imgs/Loading_2.gif" />
                    </div>
                </ProgressTemplate>
            </asp:UpdateProgress>

            <div>
                <button type="submit" id="h">Genarar horario</button>
            </div>
        </form>
    </div>

</body>
</html>

<asp:UpdateProgress runat="server" ID="idUpdateProgress"
                    AssociatedUpdatePanelID="h" DynamicLayout="true">
    <ProgressTemplate>
        <div style="position: fixed;top: 50%;left: 50%;transform: translate(-50%, -50%);">
            <img id="idAjaxLoader" alt="Enviando ..." src="~/Imgs/Loading_2.gif" />
        </div>
    </ProgressTemplate>
</asp:UpdateProgress>



