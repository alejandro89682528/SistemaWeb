@model SistemaWeb.Contexto.horario_generacion
@{
    ViewBag.Title = "Horario";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Generacion de Horario</title>
</head>
<body>
    <div>

        <h2>Generacion de horario</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                Seleccionar Carrera
                <div class="col-md-10">
                    @Html.DropDownList("cod_carrera", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cod_carrera, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                Semestre
                <div class="col-md-10">
                    @Html.DropDownList("tipo_ciclo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.tipo_ciclo, "", new { @class = "text-danger" })
                </div>

            </div>


            <script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>

            <div>
                @using (Html.BeginForm())
                {
                    @Html.EditorFor(model => model.fecha_ini, new { htmlAttribute = new { @class = "datepicker" } })
                }

                <link href="~/Content/themes/base/minified/jquery-ui.min.css" rel="stylesheet" />

                @section scripts {


                    <script src="~/Scripts/jquery-ui-1.8.23.min.js"></script>
                    <script>

                        $(function () {
                            $(".datepicker").datepicker({
                                dateFormat: "yy/mm/dd",
                                changeMonth: true,
                                changeYear: true,
                                yearRange: "2018 : 2050",
                                showOn: "both",
                                buttonText: "<i class='fa fa-calendar'></i>"
                            });
                        });

                    </script>

                }

            </div>

            <div>
                <button type="submit">Genarar horario</button>
            </div>
        </form>
    </div>
</body>
</html>
