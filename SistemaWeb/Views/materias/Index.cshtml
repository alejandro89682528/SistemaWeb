@model IEnumerable<SistemaWeb.Contexto.materia>

@{
    ViewBag.Title = "Index";

    if (ViewBag.displayRole == 0)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.displayRole == 1)
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (ViewBag.displayRole == 2)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


}

<h2>Lista de materias</h2>

<p>
    <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/materias/Create', 'contentdialog')"> <Span class="btn btn-success"> Crear nuevo </Span></a>

    @using (Html.BeginForm())
    {
    <p>
        Nombre materia: @Html.TextBox("nombre")
        <input type="submit" value="Buscar" class="btn btn-outline-primary"/>
    </p>
    }
   </p>
    <table class="table">
        <tr>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#visualEditar" onclick="loadData('/materias/Edit/@item.cod_materia', 'contentedit')">  <Span class='btn btn-warning'> Editar </Span></a>
                    <a href="#" data-toggle="modal" data-target="#visualDetalle" onclick="loadData('/materias/Details/@item.cod_materia', 'contentdetalle')">  <Span class='btn btn-info'> Detalles </Span></a>
                    <a href="#" data-toggle="modal" class='btn btn-danger' data-target="#visualEliminar" onclick="loadData('/materias/Delete/@item.cod_materia', 'contenteliminar')">  <Span class='glyphicon glyphicon-th-list'></Span> Eliminar</a>
                </td>
            </tr>
        }

    </table>



    <div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Crear nueva materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdialog">
                </div>
            </div>
        </div>
    </div>




    <div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Actualizar materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentedit">
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles de materia</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdetalle">
                </div>
            </div>
        </div>
    </div>


    <div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contenteliminar">
                </div>
            </div>
        </div>
    </div>
