@model IEnumerable<SistemaWeb.Contexto.grupo>

@{
    ViewBag.Title = "Index";

    if (ViewBag.displayRole == 0)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.displayRole == 1)
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (ViewBag.displayRole == 2)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


}

<h2>Index</h2>

<p>

    <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/grupoes/Create', 'contentdialog')"> <Span class="btn btn-success"> Crear nuevo </Span></a>
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Capacidad
        </th>
        <th>
            Tipo de ciclo
        </th>
        <th>
            Asignatura
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo_ciclo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pensum.materia)
            </td>
            <td>

                <a href="#" data-toggle="modal" data-target="#visualEditar" onclick="loadData('/grupoes/Edit/@item.cod_grupo', 'contentedit')">  <Span class='btn btn-warning'> Editar </Span></a>
                <a href="#" data-toggle="modal" data-target="#visualDetalle" onclick="loadData('/grupoes/Details/@item.cod_grupo', 'contentdetalle')">  <Span class='btn btn-info'> Detalles </Span></a>
                <a href="#" data-toggle="modal" class='btn btn-danger' data-target="#visualEliminar" onclick="loadData('/grupoes/Delete/@item.cod_grupo', 'contenteliminar')">  <Span class='glyphicon glyphicon-th-list'></Span> Eliminar</a>


            </td>
        </tr>
    }

</table>



<div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Agregar nuevo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdialog">
            </div>
        </div>
    </div>
</div>




<div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Actualizar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentedit">
            </div>
        </div>
    </div>
</div>

<div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detalles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contentdetalle">
            </div>
        </div>
    </div>
</div>


<div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Eliminar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contenteliminar">
            </div>
        </div>
    </div>
</div>

