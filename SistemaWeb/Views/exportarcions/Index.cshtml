@model IEnumerable<SistemaWeb.Contexto.exportarcion>

@{
    ViewBag.Title = "Lista de impor";
}
   
<h1>Lista</h1>

    <p>
        <a href="#" data-toggle="modal" data-target="#modaldialog" onclick="loadData('/exportarcions/Create', 'contentdialog')"> <Span class="btn btn-success"> Crear nuevo </Span></a>
    </p>
    <table class="table">
        <tr>
            <th>
                Inss
            </th>
            <th>
                Grupo
            </th>
            <th>
                Total estudiante
            </th>
            <th>
                Año
            </th>
            <th>
                Semestre
            </th>
            <th>
                Grupo teorico
            </th>
            <th>
                Grupo practico
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.inss)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total_estudiante)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anolectivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo_ciclo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grupo_teorico)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grupo_practico)
                </td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#visualEditar" onclick="loadData('/exportarcions/Edit/@item.id', 'contentedit')">  <Span class='btn btn-warning'> Editar </Span></a>
                   
                    <a href="#" data-toggle="modal" class='btn btn-danger' data-target="#visualEliminar" onclick="loadData('/exportarcions/Delete/@item.id', 'contenteliminar')">  <Span class='glyphicon glyphicon-th-list'></Span> Eliminar</a>
                </td>
            </tr>
        }

    </table>


    <div class="modal" id="modaldialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Agregar nuevo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdialog">
                </div>
            </div>
        </div>
    </div>




    <div class="modal" id="visualEditar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Actualizar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentedit">
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="visualDetalle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contentdetalle">
                </div>
            </div>
        </div>
    </div>


    <div class="modal" id="visualEliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="contenteliminar">
                </div>
            </div>
        </div>
    </div>

