@model SistemaWeb.Contexto.horariogeneracion


<div>

    <center>

        <h2>Editar</h2>
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                Seleccionar Dia
                <div class="col-md-10">
                    @Html.DropDownList("id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                Seleccionar Periodo
                <div class="col-md-10">
                    @Html.DropDownList("cod_periodo", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cod_periodo, "", new { @class = "text-danger" })
                </div>

            </div>


            

            <div class="form-group">
                seleccionar Profesor
                <div class="col-md-10">
                    @Html.DropDownList("profesor", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.profesor, "", new { @class = "text-danger" })
                </div>

            </div>

            <div>

                <input type="submit" value="Actualizar"  />
            </div>
        </form>
    </center>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}