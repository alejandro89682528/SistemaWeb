@model IEnumerable<SistemaWeb.Contexto.anolectivo>

@{
    ViewBag.Title = "Index";

    if (ViewBag.displayRole == 0)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (ViewBag.displayRole == 1)
    {
        Layout = "~/Views/Shared/_LayoutManager.cshtml";
    }
    else if (ViewBag.displayRole == 2)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Año
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ano)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cod_ano }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.cod_ano }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.cod_ano })
        </td>
    </tr>
}

</table>
